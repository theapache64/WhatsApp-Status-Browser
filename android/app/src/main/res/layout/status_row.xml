<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/status_row_height"
    android:background="@drawable/simple_selector_trans_grey"
    android:orientation="vertical">

    <!--Thumbnail-->
    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />


    <ImageButton
        android:id="@+id/ibSaveToGallery"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@drawable/simple_selector_trans_grey_circle"
        android:src="@drawable/ic_save_grey_32dp" />

</RelativeLayout>